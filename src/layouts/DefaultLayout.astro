---
import RootLayout from "./RootLayout.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
import NavLink from "../components/navigation/NavLink.astro";
import logo from "../images/logo.png";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import MobileMenu from "../components/navigation/MobileMenu.astro";
import { banner } from "../config/home";
---

<RootLayout title={title}>
    { banner ? <div class="bg-primary-600 text-white p-4 text-center">
        <p class="text-sm">{banner}</p>
    </div> : null}
    <header class="max-w-screen-lg mx-auto p-4 flex justify-between items-center w-full">
        <a href="/" class="flex items-center gap-2">
			<Image src={logo} alt="Stanford Run Club Logo" class="w-6 h-6" />
			<h1 class="text-xl font-bold hidden md:block lg:hidden">Stanford Run Club</h1>
			<h1 class="text-xl font-bold hidden md:hidden lg:block">Stanford Running Club</h1>
		</a>
		<nav class="hidden md:block">
			<ul class="flex gap-2">
				<li><NavLink href="/about" text="About Us" /></li>
				<li><NavLink href="/runs" text="Our Runs" /></li>
				<li><NavLink href="/team" text="The Team" /></li>
				<li><a href="/contact" class="px-2 py-1 bg-primary-400 text-white hover:bg-primary-500 rounded text-sm transition-colors border-b-2 border-primary-600">Get in Touch!</a></li>
			</ul>
		</nav>
		<MobileMenu />
	</header>
	<main class="grow">
		<slot />
	</main>
	<footer class="max-w-screen-lg mx-auto p-2 md:p-4 text-center w-full">
		<p class="text-sm text-zinc-500">Stanford Running Club &copy; {new Date().getFullYear()}</p>
	</footer>
</RootLayout>
